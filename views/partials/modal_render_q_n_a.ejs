<div class="modal fade" id="qa-render-modal" tabindex="-1" role="dialog" aria-labelledby="aAddModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="aAddModalLabel"><span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>Submit An Answer</h4>
      </div><br>

      <div class="modal-body">

        <div id="qa-anchor"></div>

        <form action="submit" id="userform">
          Answer: <textarea type="text" name="answer" placeholder="Delight us with your intellect!" class="form-control" rows="4" id="a-form-body"></textarea><br>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" class="" id="io-a-submit-btn" data-dismiss="modal">Answer It!</button>
      </div>
    </div>
  </div>
</div>
